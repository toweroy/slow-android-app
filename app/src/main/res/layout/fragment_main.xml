<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:text="@string/cpu1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_cpu_1" />
    <TextView android:text="@string/cpu1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpu_1_param_txt"
        android:layout_above="@+id/cpu_2_txt"
        android:layout_toRightOf="@+id/txt_cpu_1"
        android:layout_toEndOf="@+id/txt_cpu_1"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />
    <TextView android:text="@string/cpu2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/cpu_2_txt"
        android:layout_below="@+id/txt_cpu_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:text="@string/cpu2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cpu_2_param_txt"
        android:layout_alignTop="@+id/cpu_2_txt"
        android:layout_alignLeft="@+id/cpu_1_param_txt"
        android:layout_alignStart="@+id/cpu_1_param_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:id="@+id/retry_btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Available MB"
        android:id="@+id/available_mb_txt"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/retry_btn"
        android:layout_toStartOf="@+id/cpu_2_param_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total MB"
        android:id="@+id/total_mb_txt"
        android:layout_alignTop="@+id/available_mb_txt"
        android:layout_alignRight="@+id/cpu_2_param_txt"
        android:layout_alignEnd="@+id/cpu_2_param_txt" />
</RelativeLayout>
